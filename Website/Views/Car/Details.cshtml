@model Website.ViewModel.CarViewModel

@{
    ViewData["Title"] = "Car Details";
}

<h2>Car Details</h2>

<div class="card">
    <div class="card-header">
        Car Information
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Brand @Model.Model</h5>
        <p class="card-text"><strong>Year:</strong> @Model.Year</p>
        <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>UserName:</strong> @Model.UserName</p>
        <p class="card-text"><strong>UserPhone:</strong> @Model.UserPhone</p>

        <a href="@Url.Action("Index", "Cars")" class="btn btn-primary">Back to List</a>
    </div>
</div>
